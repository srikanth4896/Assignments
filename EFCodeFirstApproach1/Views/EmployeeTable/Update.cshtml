@model EFCodeFirstApproach1.Models.EmployeeTable
@{
    ViewBag.Title = "Update";
}

<h2>Update Employee Details</h2>
<form action="/EmployeeTable/Update/@Model.Id" method="post">

    <div class="form-row">
        <div class="form-group col-md-11">
            @Html.LabelFor(m => m.EName)
            @Html.EditorFor(model => model.EName,
                new
                     {
                         htmlAttributes = new
                         {
                             @class = "form-control input-md",
                             name = "EmpName",

                         }
                     })
        </div>

        <div class="form-group col-md-11">
            @Html.LabelFor(m => m.ESalary)
            @Html.EditorFor(model => model.ESalary,
                new
                     {
                         htmlAttributes = new
                         {
                             @class = "form-control input-md",
                             name = "Salary",
                @placeholder = "Salary"
                         }
                     })
        </div>
        <div class="form-group col-md-6">
            <label for="DeptId">Department Id</label>
            <select class="form-control" id="deptid" name="DeptId">
                <option value="@Model.DeptId">Please Update Latest dept Id</option>
                @foreach (var d in ViewBag.Depts)
                {
                    <option value="@d.DeptId">@d.DeptId</option>
                }
            </select>
        </div>
        <br/>
        <div class="form-group col-md-6">
            <label for="Manager Id">Manager Id</label>
            <select class="form-control" id="MId" name="MId">
                <option value="@Model.MId">Please Update Latest Mgr Id </option>
                @foreach (var d in ViewBag.Mgs)
                {
                    <option value="@d.MId">@d.MId</option>
                }
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-success"> Update Employee</button>
    <a class="btn btn-danger" href="/EmployeeTable/Index">Cancel</a>
</form>